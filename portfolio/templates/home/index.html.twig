            gap: 20px;
            flex-wrap: wrap;
            margin-top: 20px;
        }

        .project-card {
            background: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
            width: 300px;
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }

        .project-card img {
            max-width: 100%;
            border-radius: 10px;
        }

        .project-card:hover {
            transform: scale(1.05);
        }

        .btn {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 20px;
            font-size: 1.1em;
            font-weight: bold;
            background: #ffcc00;
            color: #1E1E2E;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
        }

        .btn:hover {
            background: #ffaa00;
            transform: scale(1.05);
        }

        .timeline ul {
            list-style: none;
            padding: 0;
        }

        .timeline li {
            margin: 10px 0;
        }

        .stack-icons {
            display: flex;
            justify-content: center;
            gap: 15px;
            flex-wrap: wrap;
            font-size: 2em;
        }

        .feedback form {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
        }

        .feedback textarea {
            width: 80%;
            height: 100px;
            border-radius: 8px;
            padding: 10px;
        }

        .testimonials blockquote {
            font-style: italic;
            opacity: 0.9;
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

