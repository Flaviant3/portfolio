{% extends 'base.html.twig' %}

{% block title %}Détail de la compétence : {{ skill.name }}{% endblock %}

{% block stylesheets %}
    <style>
        .skill-detail {
            max-width: 900px;
            margin: 50px auto;
            background: rgba(255, 255, 255, 0.05);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.3);
            color: #fff;
            font-family: 'Poppins', sans-serif;
        }

        .image-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .skill-image, .illustration-image {
            width: 100%;
            max-width: 600px;
            height: auto;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }

        .skill-image:hover, .illustration-image:hover {
            transform: scale(1.05);
        }

        h1 {
            font-size: 2em;
            color: #ffaa00;
            margin-bottom: 20px;
            text-align: center;
        }

        .skill-detail p {
            font-size: 1.1em;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .btn {
            display: inline-block;
            margin-top: 30px;
            padding: 12px 25px;
            background-color: #ffcc00;
            color: #1E1E2E;
            font-weight: bold;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn:hover {
            background-color: #ffaa00;
            transform: scale(1.05);
        }

        .project-section {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid rgba(255,255,255,0.2);
        }

        .project-section h3 {
            font-size: 1.5em;
            color: #ffcc00;
            margin-bottom: 10px;
        }

        .view-project-btn {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 25px;
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .view-project-btn:hover {
            background-color: #45a049;
            transform: scale(1.05);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="skill-detail">
        {% if skill.image %}
            <div class="image-container">
                <img src="{{ skill.image }}" alt="Image principale" class="skill-image">
            </div>
        {% endif %}

        <h1>{{ skill.code }} | {{ skill.name }}</h1>

        <p>{{ skill.description|raw }}</p>

        {% if skill.project %}
            <div class="project-section">
                <h3>Projet associé : {{ skill.project.title }}</h3>
                <p>{{ skill.project.description }}</p>
            </div>
        {% endif %}

        {% if skill.image_illustration %}
            <div class="image-container">
                <img src="{{ skill.image_illustration }}" alt="Image d'illustration" class="illustration-image">
            </div>
        {% endif %}

        {% if skill.image_illustration2 %}
            <div class="image-container">
                <img src="{{ skill.image_illustration2 }}" alt="Seconde illustration" class="illustration-image">
            </div>
        {% endif %}


        <!-- Lien pour voir le projet -->
        {% if skill.project_link %}
            <a href="{{ skill.project_link }}" class="view-project-btn" target="_blank">
                Voir le projet
            </a>
        {% endif %}

        <a href="{{ path('skills_list') }}" class="btn">← Retour à la liste des compétences</a>
    </div>
{% endblock %}
