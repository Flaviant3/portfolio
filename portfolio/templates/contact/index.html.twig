{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
    <style>
        .contact-container {
            max-width: 600px;
            margin: 40px auto;
            padding: 30px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }

        .contact-container h1 {
            color: #ffcc00;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            border-radius: 6px;
            border: none;
            margin-bottom: 15px;
        }

        .btn-submit {
            background-color: #ffcc00;
            color: #1E1E2E;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: bold;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-submit:hover {
            background-color: #ffaa00;
            transform: scale(1.05);
        }

        .flash-success {
            color: #00ff88;
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="contact-container">
        <h1>Me contacter</h1>

        {% for message in app.flashes('success') %}
            <div class="flash-success">{{ message }}</div>
        {% endfor %}

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
        </div>
        <div class="form-group">
            {{ form_label(form.message) }}
            {{ form_widget(form.message) }}
        </div>
        <div style="text-align: center;">
            <button type="submit" class="btn-submit">Envoyer</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
