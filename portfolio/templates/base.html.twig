<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    <style>
        /* üåü Styles g√©n√©raux */
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1E1E2E, #252542);
            color: #ffffff;
            padding: 0;
            margin: 0;
        }

        /* üöÄ Navbar moderne */
        nav {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(10px);
            padding: 15px 30px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

        nav ul {
            list-style: none;
            display: flex;
            justify-content: center;
            gap: 40px;
        }

        nav ul li {
            display: inline;
        }

        nav ul li a {
            text-decoration: none;
            color: #ffffff;
            font-weight: 500;
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 1.1em;
            transition: all 0.3s ease-in-out;
        }

        nav ul li a:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #ffcc00;
            transform: scale(1.05);
        }

        /* üíé Ajuster l'espacement sous la navbar */
        main {
            margin-top: 80px; /* D√©cale le contenu pour ne pas √™tre masqu√© par la navbar */
            padding: 20px;
        }

        /* üñºÔ∏è Banni√®re */
        .banner {
            width: 100%;
            height: 300px;
            background-image: url('https://i.ytimg.com/vi/I_w8tsygxAI/hqdefault.jpg'); /* Remplace par ton image */
            background-position: center;
            background-size: cover;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
        }

        /* üì∏ Photo de profil */
        .profile-container {
            text-align: center;
            margin-top: 30px;
        }

        .profile-container img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 5px solid #ffcc00;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

        .profile-container h2 {
            margin-top: 15px;
            font-size: 1.8em;
            color: #ffcc00;
        }

        /* üé≠ Animation subtile */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        body {
            animation: fadeIn 0.5s ease-in-out;
        }
    </style>

    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body>

<!-- üåç Navigation -->
<nav>
    <ul>
        <li><a href="{{ path('home') }}">Accueil</a></li>
        <li><a href="{{ path('projects') }}">Projets</a></li>
        <li><a href="{{ path('about') }}">√Ä Propos</a></li>
        <li><a href="{{ path('contact') }}">Contact</a></li>
        <li><a href="{{ path('skills_list') }}">Comp√©tences</a></li>
    </ul>
</nav>

<!-- üìú Contenu principal -->
<main>

    <!-- üñºÔ∏è Banni√®re -->
    <div class="banner"></div>

    <!-- üì∏ Photo de Profil -->
    <div class="profile-container">
        <img src="https://i.imgur.com/EWsbsfr.jpeg" alt="Photo de Profil"> <!-- Remplace cette URL par ton image -->
        <h2>TANGHE Flavian</h2>
    </div>

    {% block body %}{% endblock %}
</main>

</body>
</html>
